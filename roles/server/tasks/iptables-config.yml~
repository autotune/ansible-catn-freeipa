- name: Apply iptables rules
  command: lokkit -p 53:tcp && lokkit -p 53:udp && lokkit -p 80:tcp && lokkit -p 88:tcp && lokkit -p 88:udp && lokkit -p 123:udp && lokkit -p 389:tcp && lokkit -p 433:tcp && lokkit -p 464:tcp && lokkit -p 464:udp && lokkit -p 636:tcp && lokkit -p 7389:tcp
  notify: restart iptables
